<div class="container">
  <div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">

<h2>以下の内容で問い合わせします</h2>
<%= form_for @contact do |f| %>
  <%= f.hidden_field :name %>
  <%= f.hidden_field :email %>
  <%= f.hidden_field :content %>
  <ul style="list-style-type: none;">
    <li>名前：<%= @contact.name %></li>
    <li>メールアドレス：<%= @contact.email %></li>
    <li>内容：<%= @contact.content %></li>
  </ul>
  <%= f.submit "送信",  class: "btn btn-default btn-block"  %>
<% end %>

<%= form_for(@contact, url: new_contact_path, method: :get) do |f| %>
  <%= f.hidden_field :name %>
  <%= f.hidden_field :email %>
  <%= f.hidden_field :content %>
  <%= f.submit "戻る", name: "back", class: "btn btn-primary btn-block" %>
<% end %>
  </div>
</div>
