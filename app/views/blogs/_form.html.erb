<%= form_for(@blog, url: new_or_edit) do |f| %>

 <% if @blog.errors.any? %>
 <div id="error_explanation">
   <h2><%= @blog.errors.count %>件のエラーがあります</h2>
   <ul>
     <% @blog.errors.full_messages.each do |msg| %>
     <li><%= msg %></li>
     <% end %>
   </ul>
 </div>
 <% end %>


  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>
  <%= f.label :content %>
  <%= f.text_field :content %>
  <br>
  <%= f.submit %>
<% end %>
